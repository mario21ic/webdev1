
  <div class="row">
    <div class="col-md-8">
      <input class="form-control form-control-lg mr-sm-2" type="search" placeholder="Ingrese nombre del proyecto / DirecciÃ³n" aria-label="Search">
    </div>
    <div class="col-md-4">
      <%= collection_select("estados", "id", @variables.where(tipo_variable: 'Estado Proyecto') , :codigo_variable, :descricion_variable, {:prompt => "Todos los estados"}, :id => 'estado', :class=>"form-control form-control-lg mr-sm-2")  %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-4">
      <%= collection_select("departamentos", "id", @variables.where(tipo_variable: 'UbigeoDepartamentos') , :codigo_variable, :descricion_variable, {:prompt => "Todos los departamentos"}, :id => 'departamento', :class=>"form-control mr-sm-2")  %>
    </div>
    <div class="col-md-4">
      <%= collection_select("provincias", "id", @variables.where(tipo_variable: 'UbigeoProvincias') , :codigo_variable, :descricion_variable, {:prompt => "Todas las provincias"}, :id => 'provincia', :class=>"form-control mr-sm-2")  %>
    </div>
    <div class="col-md-4">
      <%= collection_select("distritos", "id", @variables.where(tipo_variable: 'UbigeoDistritos') , :codigo_variable, :descricion_variable, {:prompt => "Todos los distritos"}, :id => 'distrito', :class=>"form-control mr-sm-2")  %>
    </div>
    <%= render '/departamentos/filtros', departamento: @departamento %>
  </div>
