<p id="notice"><%= notice %></p>
<%= content_for :head do %>
  <br/>
  <div class="row bd-example">
    <div class="col-md-12 mb-4">
      <span class="display-2">{{Proyecto.Nombre}} </span>
    </div>
  </div>
<% end %>

<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-12" style="overflow:hidden;">
      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active w-450" style="height: 550px!important; overflow: hidden;">
            <img src="https://img10.naventcdn.com/avisos/111/00/08/03/06/86/1200x1200/160060081.jpg" class="card-img d-block w-100 align-middle" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h5>First slide label</h5>
              <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
            </div>
          </div>
          <div class="carousel-item w-450" style="height: 550px!important; overflow: hidden;">
            <img src="https://revistaconstruir.com/wp-content/uploads/2015/11/GT-Mariscal-uno-uno.jpg" class="card-img d-block w-100 align-middle" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h5>Second slide label</h5>
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
          </div>
          <div class="carousel-item w-450" style="height: 550px!important; overflow: hidden;">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSLTYzTM310_JnDkpOJbAi3f9U-6-ix0uRo_w&usqp=CAU" class="card-img d-block w-100 align-middle" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h5>Third slide label</h5>
              <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-md-12">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 text-justify align-middle">
            <p class="card-text"><%= @departamento.descripcion_larga %></p>
          </div>
          <div class="col-md-6">
            <div class="row">
              <div class="col-md-9 text-center col-form-label-lg">
                <h2> $ 200 000.00 </h2>
              </div>
              <div class="col-3">
                <span class="badge badge-primary badge-pill mt-4">Activo</span>
                <span class="card-text text-warning h4">★</span>
              </div>
              <div class="col-md-3 text-right mt-1">
                <p class="card-text"><small>Dormitorios :</small></p>
              </div>
              <div class="col-md-3">
                <b class="ml-1"><%= @departamento.dormitorios %></b>
              </div>
              <div class="col-md-3 text-right mt-1">
                 <p class="card-text"><small>Baños :</small></p>
              </div>
              <div class="col-md-3">
                <b class="ml-1"><%= @departamento.baños %></b>
              </div>
              <div class="col-md-3 text-right mt-1">
                <p class="card-text"><small>Area Techada :</small></p>
              </div>
              <div class="col-md-3">
                <b class="ml-1"><%= @departamento.area_techada %>m²</b>
              </div>
              <div class="col-md-3 text-right mt-1">
                 <p class="card-text"><small>Area Total :</small></p>
              </div>
              <div class="col-md-3">
                <b class="ml-1"><%= @departamento.area_total %>m²</b>
              </div>
              <div class="col-md-3 text-right mt-1">
                <p class="card-text"><small>Piso :</small></p>
              </div>
              <div class="col-md-3" >
                <b class="ml-1"><%= @departamento.piso %></b>
              </div>
              <div class="col-md-3 text-right mt-1">
                <p class="card-text"><small>Número :</small></p>
              </div>
              <div class="col-md-3">
                <b class="ml-1"><%= @departamento.numero %></b> 
              </div>
            </div>
          </div>
        </div>
        <div class="text-right mt-2">
          <a class="btn-primary btn text-light" href="/solicituds/new">Cita</a>
          <%= link_to 'Regresar', departamentos_path, :class => "btn-warning btn" %>
          <%= link_to 'Editar', edit_departamento_path(@departamento), :class => "btn-danger btn text-light" %>
          <a class="btn-primary btn text-light" href="/separars/new">Separar</a>
        </div>
      </div>
    </div>
  </div>
</div>
