  <% end %>

<div class="form-row">
 <div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Código de solicitud</label>
    <%= form.number_field :cod_solictud, :class=>"form-control form-control-lg mr-sm-2"%>
  </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Código de Departamento</label>
    <%= form.number_field :cod_departamento, :class=>"form-control form-control-lg mr-sm-2"%>
  </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Tipo de Documento</label>
    <select name="solicitud[tipo_documento]" id="solicitud_tipo_documento" class="form-control form-control-lg mr-sm-2">
          <option>[Seleccione]</option>
          <option value="DNI">DNI</option> 
          <option value="C.Extranjeria">C. Extranjeria</option>
          <option value="Pasaporte">Pasaporte</option>
          <option value="RUC">RUC</option>
        </select>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Número de Documento</label>
    <%= form.text_field :numero_documento, :class=>"form-control form-control-lg mr-sm-2"%>
  </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Nombres</label>
    <%= form.text_field :nombres, :class=>"form-control form-control-lg mr-sm-2"%>
  </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Apellidos</label>
    <%= form.text_field :apellidos, :class=>"form-control form-control-lg mr-sm-2"%>
  </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Correo</label>
    <%= form.email_field :correo, :class=>"form-control form-control-lg mr-sm-2"%>
  </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Teléfono</label>
    <%= form.text_field :telefono, :class=>"form-control form-control-lg mr-sm-2"%>
  </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Mensaje</label>
    <%= form.text_field :mensaje, :class=>"form-control form-control-lg mr-sm-2"%>
  </div>

<div class="col-md-4 mb-3 field">
    <label class="col-form-label col-form-label-lg">Estado</label>

        <select name="solicitud[estado]" id="solicitud_estado" class="form-control form-control-lg mr-sm-2">
          <option>[Seleccione]</option>
          <option value="Activo">Activo</option> 
          <option value="Inactivo">Inactivo</option>
          <option value="Falta Activar">Falta Activar</option>
        </select>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
  </div>  
  <div class="actions text-right">
  <%= link_to 'Regresar', solicituds_path, :class => "btn-warning btn btn-lg" %>
  <%= form.submit "Crear Solicitud", :class => "btn btn-lg btn-success text-light"%>
  </div>
</div>
