<p id="notice"><%= notice %></p>

<h1>Venta</h1>

<table>
  <thead>
    <tr>
      <th>Cod venta</th>
      <th>Tipo documento</th>
      <th>Numero documento</th>
      <th>Cod departamento</th>
      <th>Cod solicitud</th>
      <th>Tipo compra</th>
      <th>Total</th>
      <th>Saldo</th>
      <th>Estado</th>
      <th>Usu crea</th>
      <th>Fec crea</th>
      <th>Usu mod</th>
      <th>Fec mod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venta.each do |ventum| %>
      <tr>
        <td><%= ventum.cod_venta %></td>
        <td><%= ventum.tipo_documento %></td>
        <td><%= ventum.numero_documento %></td>
        <td><%= ventum.cod_departamento %></td>
        <td><%= ventum.cod_solicitud %></td>
        <td><%= ventum.tipo_compra %></td>
        <td><%= ventum.total %></td>
        <td><%= ventum.saldo %></td>
        <td><%= ventum.estado %></td>
        <td><%= ventum.usu_crea %></td>
        <td><%= ventum.fec_crea %></td>
        <td><%= ventum.usu_mod %></td>
        <td><%= ventum.fec_mod %></td>
        <td><%= link_to 'Show', ventum %></td>
        <td><%= link_to 'Edit', edit_ventum_path(ventum) %></td>
        <td><%= link_to 'Destroy', ventum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva venta', new_ventum_path, :class => "btn btn-success my-2 my-sm-0" %>
