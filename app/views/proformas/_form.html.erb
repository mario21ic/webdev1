      </div>
    </div>
    <div class="form-row">
      <div class="col-md-4 mb-3 field">
        <label class="col-form-label col-form-label-lg">DNI:</label>
        <%= form.text_field :dni, :class=>"form-control form-control-lg mr-sm-2"%>
      </div>
      <div class="col-md-4 mb-3 field">
        <label class="col-form-label col-form-label-lg">Correo:</label>
        <%= form.text_field :correo, :class=>"form-control form-control-lg mr-sm-2"%>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-4 mb-3 field">
        <label class="col-form-label col-form-label-lg">Telefono:</label>
        <%= form.text_field :telefono, :class=>"form-control form-control-lg mr-sm-2"%>
      </div>
      <div class="col-md-4 mb-3 field">
        <label class="col-form-label col-form-label-lg">Costo:</label>
        <%= form.text_field :costo_base, :class=>"form-control form-control-lg mr-sm-2"%>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-4 mb-3 field">
        <label class="col-form-label col-form-label-lg">Descuento:</label>
        <%= form.text_field :descuento, :class=>"form-control form-control-lg mr-sm-2"%>
      </div>
      <div class="col-md-4 mb-3 field">
        <label class="col-form-label col-form-label-lg">Costo final:</label>
        <%= form.text_field :costo_final, :class=>"form-control form-control-lg mr-sm-2"%>
      </div>
    </div>

