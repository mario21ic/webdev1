<%= content_for :head do %>
  <p id="notice"><%= notice %></p>
  <div class="row bd-example">
    <div class="col-md-8">
      <h1 class="display-1">Proyectos</h1>
    </div>
    <div class="col-md-4 text-right mb-4">
      <br/>
      <br/>
      <br/>
    </div>
  </div>
<% end %>
  <div class="row mt-4">
    <div class="col-md-8">
      <input class="form-control form-control-lg mr-sm-2" type="search" placeholder="Ingrese nombre del proyecto / Dirección" aria-label="Search">
    </div>
    <div class="col-md-4">
      <select class="form-control form-control-lg mr-sm-2">
        <option>Todos los estados</option>
        <option value="value1">Activo</option> 
        <option value="value3">Inactivo</option>
        <option value="value3">Pre-Venta</option>
      </select>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-4">
      <select class="form-control mr-sm-2">
        <option>Todos los departamentos</option>
        <option value="value1">Lima</option> 
        <option value="value3">Arequipa</option>
        <option value="value3">Cusco</option>
      </select>
    </div>
    <div class="col-md-4">
      <select class="form-control mr-sm-2">
        <option>Todos las provincias</option>
      </select>
    </div>
    <div class="col-md-4">
      <select class="form-control mr-sm-2">
        <option>Todos los distritos</option>
      </select>
    </div>
    <%= render '/departamentos/filtros', departamento: @departamento %>
  </div>
  <div class="row mt-2">
    <div class="col-md-8 text-right">
    </div>
    <div class="col-md-2 text-right">
      <button class="form-control btn btn-success my-2 my-sm-0" type="submit">Buscar</button>
    </div>
    <div class="col-md-2 text-right">
      <button class="form-control btn btn-warning my-2 my-sm-0" type="submit">Limpiar</button>
    </div>
  </div>

<div class="row mt-4">
  <% @proyectos.each do |proyecto| %>
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-4" style="overflow:hidden;">
              <img src="https://vidarq.pe/wp-content/uploads/2019/04/proyecto-inmobiliario-en-surco-esen.jpg" class="card-img" style="height: 100%;max-height: 200px;width: auto;" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <div class="row" style="height: 110px; overflow: hidden;">
                <div class="col-md-8">
                  <h5 class="card-title"><%= proyecto.nombre %></h5>
                </div>
                <div class="col-md-4 text-right">
                  <span class="badge badge-primary badge-pill">Activo</span>
                  <span class="card-text text-warning h4">★</span>
                </div>
                <div class="col-md-12 text-justify">
                  <p class="card-text"><%= proyecto.descripcion_corta %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-8">
                  <p class="card-text text-truncate"><small class="text-muted"><%= proyecto.ubicacion %></small></p>
                </div>
                <div class="col-md-4 text-right">
                  <p class="card-text"><small class="text-muted font-weight-bold">$<%= proyecto.precio_m2%> m²</small></p>
                </div>
              </div>

              <div class="text-right mt-2">
                  <%= link_to 'Ver más', proyecto, :class => "btn-success btn-sm text-light" %>
                  <%= link_to 'Editar', edit_proyecto_path(proyecto), :class => "btn-danger btn-sm text-light" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= content_for :food do %>
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </nav>
<% end %>

