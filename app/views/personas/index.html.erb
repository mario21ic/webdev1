<h1>Personas</h1>

<table>
  <thead>
    <tr>
      <th>Tipo documento</th>
      <th>Numero documento</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Mca juridico</th>
      <th>Sexo</th>
      <th>Fecha aniversario</th>
      <th>Date</th>
      <th>Estado</th>
      <th>Usu crea</th>
      <th>Fec crea</th>
      <th>Usu mod</th>
      <th>Fec mod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.tipo_documento %></td>
        <td><%= persona.numero_documento %></td>
        <td><%= persona.nombres %></td>
        <td><%= persona.apellidos %></td>
        <td><%= persona.correo %></td>
        <td><%= persona.telefono %></td>
        <td><%= persona.mca_juridico %></td>
        <td><%= persona.sexo %></td>
        <td><%= persona.fecha_aniversario %></td>
        <td><%= persona.date %></td>
        <td><%= persona.estado %></td>
        <td><%= persona.usu_crea %></td>
        <td><%= persona.fec_crea %></td>
        <td><%= persona.usu_mod %></td>
        <td><%= persona.fec_mod %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

